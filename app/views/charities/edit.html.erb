<% content_for :title  do %>
  Update Details for <%= @charity.name %>
<% end %>

<div class="container">
  <h3>Update Details for <%= @charity.name %></h3>
  <%= simple_form_for @charity do |f| %>
  <div class="form-card">
    <%= f.input :name %>
    <%= f.input :bio %>
    <%= f.input :address %>
    <%= f.input :email %>
    <%= f.input :phone_number %>
    <%= f.input :website %>
    <%= f.input :photo, as: :file %>
  </div>
  <div  class="form-actions">
    <%= f.button :submit, 'Save Changes' %>
  </div>
  <% end %>
</div>

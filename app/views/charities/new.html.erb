<% content_for :title  do %>
  Register Your Charity or Non-Profit
<% end %>

<div class="container">
  <div class="page-header">
    <h1>Register Your Charity or Non-Profit Organisation</h1>
    <p>Please fill in your charity's basic details here.
    We will contact you with the next steps for verification within two business days.</p>
  </div>
  <%= simple_form_for @charity do |f| %>
  <div class="form-card">
    <%= f.input :name %>
    <%= f.input :bio %>
    <%= f.input :address %>
    <%= f.input :email %>
    <%= f.input :phone_number %>
    <%= f.input :website %>
    <%= f.input :photo, as: :file %>
    <div class="form-actions">
      <%= f.button :submit, 'Submit Application' %>
    </div>
  </div>
  <% end %>
</div>

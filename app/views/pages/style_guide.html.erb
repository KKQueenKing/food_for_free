<% content_for :title  do %>
  Style Guide
<% end %>

<div>
  <%= render "shared/navbar" %>
</div>

<div class="container">

  <div class="donation-card-box">
    <h2>Donation Card</h2>
    <div class="d-flex">
      <div class="card donation-card">
        <h2 class="donation-card-title">Beef Lasange</h2>
        <div class="donation-card-body">This was made today for a conference that was cancelled at the last minute. Packaged up and ready to go.</div>
        <div class="donation-card-quantity">110 Serves</div><div class="donation-card-expiry">Expires: 3 days</div>
        <div class="donation-card-location">Location: Melbourne CBD</div>
      </div>
  </div>


  </div>
  <hr />


  <div>
    <h2>Dashboard card</h2>


  </div>
  <hr />


  <div>
    <h2>Tags</h2>


  </div>

  <hr />


  <div>
    <h2>Image upload</h2>
      <div>
        <%= cl_image_tag @charity.photo.key, crop: :fill, height: 400, width: 400 %>
      </div>

  </div>
  <hr />


  <div>
    <h2>Text field</h2>

  <div class="form-group fff-form">
      <label class="fff-form-label" for="exampleInputEmail1">Email address</label>
      <input type="email" class="form-control fff-form-input" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
      <small id="emailHelp" class="form-text text-muted fff-form-comment">We will share your email address when your donation is accepted.</small>
    </div>
  </div>
  <hr />


  <div>
    <h2>Text area</h2>


  </div>
  <hr />


  <div>
    <h2>Quantity select</h2>


  </div>
  <hr />


  <div>
    <h2>Buttons</h2>
    <button type="button" class="btn btn-info submit-button">Submit button</button>
    <button type="button" class="btn btn-primary go-back-button">Go Back</button>
    <button type="button" class="btn btn-outline-danger delete-button">Delete button</button>
  </div>
  <div>

  </div>
  <hr />

  <div>
    <h2>Maps</h2>
      <div class="map_box">
      <div
        id="map"
        style="width: 670px;
        height: 500px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>

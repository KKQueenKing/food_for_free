<% content_for :title  do %>
Browse Donations
<% end %>
<div class="container">
  <div class="index-header">
    <h1>Search for a donation</h1>
  </div>
  <p>Enter your search criteria: eg. location or dietary requirements</p>

  <%= simple_form_for :search, url: food_donations_path, method: :get do |f| %>
    <div class="search-form-control form-group">
      <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i>
      </button>
      <input class="form-control search-input" type="text" name="query" id="query" placeholder="eg. Vegetarian" />
    </div>
  <% end %>

  <div class="map_box">
    <div
      id="map"
      style="width: 100%;
      height: 60vh;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>

    <div class="marker-card">
      <div class="card donation-card">
      </div>
      <h3 class="close-card">x</h3>
    </div>
  </div>
</div>
